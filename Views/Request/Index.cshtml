@model IEnumerable<LibraryManagement.Models.Request>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RequestDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Book)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Subsidiary)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.RequestID">
                        @Html.DisplayFor(modelItem => item.RequestDate)
                    </a>
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.RequestID">
                        @Html.DisplayFor(modelItem => item.User.Name)
                    </a>
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.RequestID">
                        @Html.DisplayFor(modelItem => item.Book.Title)
                    </a>
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.RequestID">
                        @Html.DisplayFor(modelItem => item.Status)
                    </a>
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.RequestID">
                        @Html.DisplayFor(modelItem => item.Subsidiary.Address)
                    </a>
                </td>
                @*<td>
                    <a asp-action="Edit" asp-route-id="@item.RequestID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.RequestID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.RequestID">Delete</a>
                </td>*@
            </tr>
        }
    </tbody>
</table>