@model LibraryManagement.ViewModels.StockViewModel
@inject LibraryManagement.Utils.Services.ISubsidiaryService SubsidiaryService
<div class="row">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <input type="hidden" asp-for="Borrowed" />
    <input type="hidden" asp-for="SubsidiaryID" />
    <div class="form-group">@SubsidiaryService.getNamingById(Model.SubsidiaryID)</div>
    <div class="form-group">
        <label asp-for="Total" class="control-label"></label>
        <input asp-for="Total" class="form-control" />
        <span asp-validation-for="Total" class="text-danger"></span>
    </div>
</div>

